{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        }
      },
      "required": ["displayName", "email"]
    },
    "AthkarGroup": {
      "title": "Athkar Group",
      "description": "A collection of athkar created by a user.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the athkar group."
        },
        "athkar": {
          "type": "array",
          "items": {
            "$ref": "#/entities/Athkar"
          }
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user who owns this group."
        }
      },
      "required": ["name", "userId"]
    },
    "Athkar": {
      "title": "Athkar",
      "description": "A single athkar item.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "arabic": {
          "type": "string"
        },
        "virtue": {
          "type": "string"
        },
        "count": {
          "type": "number"
        },
        "readingTimeSeconds": {
          "type": "number"
        }
      },
      "required": ["id", "arabic"]
    }
  },
  "auth": {
    "providers": ["google.com", "password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public profile information for each user."
    },
    "/users/{userId}/groups/{groupId}": {
      "schema": {
        "$ref": "#/entities/AthkarGroup"
      },
      "description": "Stores the athkar groups for each user."
    }
  }
}
